<TableLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.jcarter62.numbergamex3.ngx3.Enter3"
    android:shrinkColumns="*"
    android:stretchColumns="*">
<TableRow android:layout_width="fill_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/instructions_enter3"
        android:id="@+id/textView"
        android:textSize="@dimen/Feedback_Text_Size"

        android:layout_span="2"
        android:layout_column="0" />

</TableRow>
    <TableRow>
        <TextView
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:layout_span="2"
            />
    </TableRow>
    <TableRow android:layout_width="wrap_content">
        <TextView
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="First Number:"
            android:id="@+id/n1Label"
            android:layout_column="0" />
        <EditText
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/n1Text"
            android:layout_column="1" />
    </TableRow>

    <TableRow>
        <TextView
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Second Number:"
            android:id="@+id/n2Label"
            android:layout_column="0" />
        <EditText
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/n2Text"
            android:layout_column="1" />
    </TableRow>

    <TableRow>
        <TextView
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Third Number:"
            android:id="@+id/n3Label"
            android:layout_column="0" />
        <EditText
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/n3Text"
            android:layout_column="1" />
    </TableRow>
    <TableRow>
        <TextView
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:layout_span="2"
            />
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/btnClear"
            android:text="Clear"
            android:onClick="onClear"
            />
        <Button
            android:id="@+id/btnCompute"
            android:text="Compute"
            android:onClick="onCompute" />
    </TableRow>

    <TableRow>
        <TextView
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:layout_span="2"
            />
    </TableRow>

    <TableRow>
        <TextView
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Largest Number:"
            android:id="@+id/n4Label"
            android:layout_column="0" />
        <TextView
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/n4Text"
            android:layout_column="1" />
    </TableRow>

</TableLayout>
